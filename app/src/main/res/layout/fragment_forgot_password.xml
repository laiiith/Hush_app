<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".fragments.ForgotPassword">


    <TextView
        android:id="@+id/textView"
        style="@style/logo_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/app_name"
        android:textColor="@color/greenColor"
        android:textSize="52sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/emailET_forogt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/text_box"
        android:hint="Email"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ProgressBar
        android:id="@+id/progressBar_forogt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/emailET_forogt"
        app:layout_constraintStart_toStartOf="@+id/emailET_forogt"
        app:layout_constraintTop_toBottomOf="@+id/emailET_forogt" />


    <Button
        android:id="@+id/recoverBtn_forogt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/sign_in_btn"
        android:padding="15dp"
        android:text="Recover Your Password"
        android:textAllCaps="false"
        android:textColor="@color/whiteColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/emailET_forogt"
        app:layout_constraintStart_toStartOf="@+id/emailET_forogt"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_forogt" />

    <TextView
        android:id="@+id/loginTv_forogt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Back to Login"
        android:textColor="@color/greenColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/recoverBtn_forogt"
        app:layout_constraintStart_toStartOf="@+id/recoverBtn_forogt"
        app:layout_constraintTop_toBottomOf="@+id/recoverBtn_forogt" />


</androidx.constraintlayout.widget.ConstraintLayout>