<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage_comment_items"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:civ_border_color="@color/greenColor"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTV_comment_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:textColor="@color/blackColor"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/profileImage_comment_items"
        app:layout_constraintTop_toTopOf="@+id/profileImage_comment_items" />

    <TextView
        android:id="@+id/commentTV_comment_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/profileImage_comment_items"
        app:layout_constraintTop_toBottomOf="@+id/nameTV_comment_items" />

    <TextView
        android:id="@+id/timeTV_comment_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:text="2h"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/commentTV_comment_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameTV_comment_items" />


</androidx.constraintlayout.widget.ConstraintLayout>